{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*", "./src/app/components/*"],
      "@/app/components/*": ["./src/app/components/*", "./src/components/*"],
      "@/lib/*": ["./src/lib/*", "./src/app/lib/*"],
      "@/services/*": ["./src/services/*", "./src/app/services/*"],
      "@/app/services/*": ["./src/app/services/*", "./src/services/*"]
    },
    "baseUrl": ".",
    "types": []
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
